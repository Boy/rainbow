<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<floater name="restrained love" title="RestrainedLove Restrictions" rect_control="FloaterRLVRect"
	can_close="true" can_drag_on_left="false" can_minimize="true" can_resize="true"
	min_width="500" min_height="200" width="600" height="336">
	<text name="info1" font="SansSerifSmall" mouse_opaque="true" halign="center"
	 bottom_delta="-38" left="10" height="16" width="580" follows="left|right|top">
		Names in bold correspond to restrictions from scripts in the root primitive of the object.
	</text>
	<text name="info2" font="SansSerifSmall" mouse_opaque="true" halign="center"
	 bottom_delta="-16" left="10" height="16" width="580" follows="left|right|top">
		Names not in bold correspond to restrictions from scripts in a child primitive of the object.
	</text>
	<text name="info4" font="SansSerifSmall" mouse_opaque="true" halign="center"
	 bottom_delta="-16" left="10" height="16" width="580" follows="left|right|top">
		When an UUID appears in italics in place of a name, the object is not attached to your avatar.
	</text>
	<text name="info3" font="SansSerifSmall" mouse_opaque="true" halign="center"
	 bottom_delta="-16" left="10" height="16" width="580" follows="left|right|top">
		UUIDs in red correspond to missing objects (use the Refresh button to update the list).
	</text>
	<scroll_list name="restrictions_list" can_resize="true" multi_select="false"
	 background_visible="true" draw_border="true" draw_stripes="true" draw_heading="true"
	 height="216" width="580" bottom_delta="-220" left="10" follows="left|top|right|bottom">
		<column name="object_name" label="Object name (or UUID)" width="200" dynamicwidth="false" />
		<column name="restrictions" label="Restrictions" dynamicwidth="true" />
	</scroll_list>
	<button name="refresh" label="Refresh" tool_tip="Refresh the objects and associated restrictions list"
	 enabled="true" mouse_opaque="true" font="SansSerif" halign="center"
	 height="20" width="90" bottom_delta="-24" left="10" follows="left|bottom"
	/>
	<button name="close" label="Close" tool_tip="Close the floater"
	 enabled="true" mouse_opaque="true" font="SansSerif" halign="center"
	 height="20" width="90" bottom_delta="0" right="-10" follows="right|bottom"
	/>
</floater>
