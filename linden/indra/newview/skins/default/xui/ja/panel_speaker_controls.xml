<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<panel name="active_speakers_panel">
	<string name="moderator_label">
		(モデレータ)
	</string>
	<layout_stack name="panels">
		<layout_panel name="moderation_mode_panel">
			<combo_box name="moderation_mode">
				<combo_item name="OpenVoice">
					デフォルトでボイスをオン
				</combo_item>
				<combo_item name="ModeratedVoice" value="moderated">
					デフォルトでボイスをオフ
				</combo_item>
			</combo_box>
		</layout_panel>
		<layout_panel font="SansSerifSmall" name="moderate_chat_panel">
			<scroll_list name="speakers_list">
				<column label="名前" name="speaker_name"/>
			</scroll_list>
			<panel name="speaker_controls">
				<text name="resident_name">
					Rumplstiltskin Califragilistic
				</text>
				<button name="mute_btn" tool_tip="この住人のボイスをミュート(消声)します。"/>
				<check_box label="テキストをミュート" name="mute_text_btn"/>
			</panel>
		</layout_panel>
		<layout_panel name="moderator_controls">
			<text name="moderator_controls_label">
				モデレータ・コントロール:
			</text>
			<check_box name="moderator_allow_voice">
				ボイスチャットを許可
			</check_box>
			<check_box name="moderator_allow_text">
				テキストによるチャットを許可
			</check_box>
			ボイスチャットを許可
		</layout_panel>
	</layout_stack>
</panel>
