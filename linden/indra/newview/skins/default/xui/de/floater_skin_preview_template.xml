<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<multi_floater name="floater_chatterbox">
	<panel name="panel_littletoolbar">
		<button label="" name="chat_btn" tool_tip="Chat-Leiste anzeigen.(Eingabe)" />
		<flyout_button label="Unterhalten" name="communicate_btn"
		     tool_tip="Unterhalten Sie sich mit Freunden und in Gruppen." />
		<button label="Fliegen" label_selected="Landen" name="fly_btn"
		     tool_tip="Flug beginnen.Steigen/sinken mit E/C oder Bild hoch/Bild ab." />
	</panel>
	<panel name="panel_unfocused_floater">
		<text name="titlebar_focused">
			Nicht fokussiert
		</text>
		<combo_box label="Kombifeld" name="combo_box_1" />
		<text_editor name="Chat History Editor">
			Text
		</text_editor>
	</panel>
	<panel name="panel_focused_floater">
		<text name="titlebar_focused">
			Fokussiert
		</text>
		<tab_container name="chatterbox_tabs">
			<panel label="Fokussiert" name="test_1">
				<slider label="Regler" name="SliderTestName" />
				<check_box label="Wahr" name="check_box_test_1" />
				<check_box label="Unwahr" name="check_box_test_2" />
				<text_editor name="Chat History Editor">
					Chat-Text
				</text_editor>
			</panel>
			<panel label="Nicht fokussiert" name="test_2" />
		</tab_container>
	</panel>
</multi_floater>
